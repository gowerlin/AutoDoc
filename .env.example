# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/autodoc
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autodoc
DB_USER=user
DB_PASSWORD=password

# Chrome DevTools MCP
CHROME_MCP_URL=ws://localhost:3001
CHROME_HEADLESS=true
CHROME_VIEWPORT_WIDTH=1920
CHROME_VIEWPORT_HEIGHT=1080

# Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# Google Docs API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_CREDENTIALS_PATH=./credentials/google-credentials.json

# Storage
STORAGE_TYPE=filesystem
STORAGE_PATH=./storage
S3_BUCKET=autodoc-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/autodoc.log

# Performance
MAX_CONCURRENT_EXPLORATIONS=3
API_RATE_LIMIT=100
SCREENSHOT_QUALITY=85
SCREENSHOT_FORMAT=jpeg

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
